/* Patient Blood Sugar Readings */

    DROP TABLE PATIENT_SUGAR;

    CREATE TABLE PATIENT_SUGAR (
        ReadingNo INTEGER PRIMARY KEY AUTOINCREMENT,
        PatientNo INTEGER NOT NULL,
        ReadTime DATETIME NOT NULL,
        mgdL INTEGER NOT NULL,
        FOREIGN KEY (PatientNo) REFERENCES PATIENT(PatientNo)
            ON UPDATE CASCADE
            ON DELETE CASCADE
    );