        ('ENT', 'Otolaryngology'),
        ('PEDIAT', 'Pediatrics'),
        ('OBGYN', 'Obstetrics and Gynecology'),
        ('URO', 'Urology'),
        ('ENDO', 'Endocrinology'),
        ('RHEUM', 'Rheumatology'),
        ('PULM', 'Pulmonology'),
        ('HEMAT', 'Hematology'),
        ('ID', 'Infectious Disease'),
        ('EM', 'Emergency Medicine'),
        ('PLAST', 'Plastic Surgery'),
        ('RADIO', 'Radiology'),
        ('ANESTH', 'Anesthesiology'),
        ('PATH', 'Pathology');