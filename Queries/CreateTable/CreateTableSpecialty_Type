/* Medical Specialty Type */
    DROP TABLE SPECIALTY_TYPE;
    CREATE TABLE SPECIALTY_TYPE (
        Code VARCHAR(10),
        Description VARCHAR(50),
        PRIMARY KEY (Code)
    );
    INSERT INTO SPECIALTY_TYPE (Code, Description) VALUES
        ('CARD', 'Cardiology'),
        ('DERM', 'Dermatology'),
