/* Surgery Types */

    DROP TABLE SURG_TYPE;

    CREATE TABLE SURG_TYPE (
        Code INTEGER PRIMARY KEY AUTOINCREMENT,
        Name VARCHAR(50),
        Category CHAR CHECK (Category IN ('O', 'H')),
        AnatomicalLoc INTEGER NOT NULL,
        SpecialNeeds VARCHAR(100),
        FOREIGN KEY (AnatomicalLoc) REFERENCES ANATOMICAL_LOC(Code)
            ON UPDATE CASCADE
            ON DELETE CASCADE
);

    INSERT INTO SURG_TYPE (Name, Category, AnatomicalLoc, SpecialNeeds) VALUES
        ('Orthopedic Surgery', 'H', 43, 'None'),
        ('Cardiovascular Surgery', 'H', 18, 'Cardiac monitoring required'),
        ('Neurological Surgery', 'H', 41, 'Neurosurgeon needed'),
        ('General Surgery', 'H', 1, 'None'),
        ('Plastic Surgery', 'O', 24, 'Dermatologist consultation required');