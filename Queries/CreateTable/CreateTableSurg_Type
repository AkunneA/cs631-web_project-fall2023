/* Surgery Types */

    DROP TABLE SURG_TYPE;

    CREATE TABLE SURG_TYPE (
        Code INT AUTO_INCREMENT,
        Name VARCHAR(50),
        AnatomicalLoc INT NOT NULL,
        SpecialNeeds VARCHAR(100),
        PRIMARY KEY (Code),
        FOREIGN KEY (AnatomicalLoc) REFERENCES ANATOMICAL_LOC(Code)
            ON UPDATE CASCADE
            ON DELETE SET NULL
);

    INSERT INTO SURG_TYPE (Name, AnatomicalLoc, SpecialNeeds) VALUES
        ('Orthopedic Surgery', 43, 'None'),
        ('Cardiovascular Surgery', 18, 'Cardiac monitoring required'),
        ('Neurological Surgery', 41, 'Neurosurgeon needed'),
        ('General Surgery', 1, 'None'),
        ('Plastic Surgery', 24, 'Dermatologist consultation required');