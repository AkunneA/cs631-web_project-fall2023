/* Contracts for Surgeons */

    DROP TABLE SURGEON_CONTRACT;

    CREATE TABLE SURGEON_CONTRACT (
        EmpNo INT, 
        ContractType VARCHAR(20) NOT NULL CHECK (ContractType IN ('Independent', 'Partnership', 'Call Coverage', 'Research', 'Consulting')),
        LengthYrs INT NOT NULL,
        PRIMARY KEY (EmpNo),
        FOREIGN KEY (EmpNo) REFERENCES STAFF(EmpNo)
            ON UPDATE CASCADE
            ON DELETE CASCADE
        /*CHECK (EmpNo IN (SELECT EmpNo FROM STAFF WHERE EmpType = 'SURG'))*/
    );